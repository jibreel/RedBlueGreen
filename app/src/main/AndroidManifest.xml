<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.jibreelpowell.redbluegreen"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="com.jibreelpowell.redbluegreen.RED"/>
                <action android:name="com.jibreelpowell.redbluegreen.BLUE"/>
                <action android:name="com.jibreelpowell.redbluegreen.GREEN"/>
                <action android:name="com.jibreelpowell.redbluegreen.USER_COLOR"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <meta-data android:name="android.app.shortcuts"
                       android:resource="@xml/shortcuts"/>
        </activity>
    </application>

</manifest>